        stage('report publish'){
            steps{
                script{
                    sh './mvnw test -DtestFailureIgnore=true'
                }
            }
        }

    
        
    }
        post {
        always {
            echo 'I have finished'
            // deleteDir() // clean up workspace
        }
        success {
            echo 'I succeeded!'
        }
        unstable {
            echo 'I am unstable :/'
        }
        failure {
            echo 'I failed'
        }
        changed {
            echo 'Things are different...'
